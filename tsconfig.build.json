{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "dist",
    "scripts",
    "coverage"
  ],
  "include": [
    "src/index.ts",
    "src/config.ts",
    "src/createStoreRegistry.ts",
    "src/loadingState.ts",
    "src/useCrud.ts",
    "src/useStore.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true
  }
}
